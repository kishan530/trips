                    <div class="row form-group">
                            <div class="col-lg-12">
                            	{{ form_label(form.active) }}
                                {{ form_widget(form.active) }}
                            </div> 
                                                    
                        </div>   
                        
                       <h4>Itinerary</h4>
                		<div class="row">               		
                			<div class="col-lg-6">
                            	<label>Title</label>
                            </div> 
                            <div class="col-lg-6">
                            	<label>Description</label>
                            </div> 
