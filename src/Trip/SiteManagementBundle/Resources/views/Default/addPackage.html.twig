                			<div class="col-lg-6">
                            	<label>Title</label>
                            </div> 
                            <div class="col-lg-6">
                            	<label>Description</label>
                            </div> 
                		</div>
                    
                    {% macro content_prototype(j) %}
                        <div class="row form-group">
                            <div class="col-lg-6">
                                {{ form_widget(j.title) }}
                            </div> 
                                                    
                            <div class="col-lg-6">
                            	
                                {{ form_widget(j.description) }}
                            </div> 
                                                    
                        </div>
                   
                            
                        {% endmacro %}
                        <div id="content-list"
                                                data-prototype="{{ _self.content_prototype(form.contentList.vars.prototype)|e }}">
                            {% for j in form.contentList %}
                             {{ _self.content_prototype(j) }}
                            {% endfor %}
                        </div>
                    <a href="#" id="add-another-content">Add another Content</a>
                    
                     <h4>Images</h4>
                     
                     {% macro image_prototype(i) %}
                     		<div class="row form-group">
	                            <div class="col-lg-6">
	                                {{ form_label(i.url) }}
	                            </div> 
	                                                    
	                            <div class="col-lg-6">
	                            	
	                                {{ form_widget(i.url) }}
	                            </div> 
                                                    
                        	</div>
                     {% endmacro %}
                     <div id="image-list"
                                                data-prototype="{{ _self.image_prototype(form.imageList.vars.prototype)|e }}">
                            {% for i in form.imageList %}
                            	{{ _self.image_prototype(i) }}
                            {% endfor %}
                        </div>
                    <a href="#" id="add-another-image">Add another Image</a>
                        
                    
                    {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}