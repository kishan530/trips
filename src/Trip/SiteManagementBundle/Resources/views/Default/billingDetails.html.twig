{% extends 'page.html.twig' %}
{% block javascripts %}
<script>
$("select").change(function() {
			$("#search").submit();						
		});
		 $("input").blur(function() {
			$("#search").submit();						
		});
		 $(".preferDate").datepicker({
			    dateFormat: "dd/mm/yy",
			    numberOfMonths: 2,
			    minDate: 0
			});
</script>
{% endblock %}
