                                {{ form_widget(form.locations) }}
                    </div>
        	</div>
        	<div class="row billingpadding">
        	
        			<div class="col-lg-3">
                            	{{ form_label(form.vehicle_id) }} 
                                {{ form_widget(form.vehicle_id) }}
                    </div>
                    <div class="col-lg-3">
