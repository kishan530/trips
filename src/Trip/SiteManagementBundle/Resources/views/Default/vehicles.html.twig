{% extends 'page.html.twig' %}
{% block javascripts %}
<script>
$("select").change(function() {
			$("#search").submit();						
		});
		 $("input").blur(function() {
			$("#search").submit();						
		});
</script>
{% endblock %}
{% block body %}

    <section class="section clearfix">
        <div class="container">
            <div class="row">
                <div id="fullwidth" class="col-sm-12">
                    <div class="col-lg-5">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div id="fullwidth" class="col-sm-12">
                     {% for vehicle in vehicles %}
                        <div class="row">
                            <div class="col-lg-2">
                                {{ vehicle.model }}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
</section>
{% endblock %}