</section>
<section class="space"></section>
<section class="section clearfix">
    <div class="container">
        <div class="row">
                        <div class="col-lg-12 col-sm-12 col-xs-12">
                        <div class="hotel-title">
                <h3>OUR FLEET</h3>
                <hr class="left">
            </div><!-- end hotel-title -->
                            {% for bike in bikes %} 
                            {% if bike.active==1 %}
                            <div class="col-md-3" >
                            <div class="bike-background">
                            <div>
                            <img src="{{asset('images/bikes/'~bike.imgPath) }}" style="width: 100%;">
                            </div>
                                     
                            	{% for bikecities in bike.bikescity %}
                                    {% if bikecities.cityid==bikeslocbase.cityid %}                       
                                <h4 style="text-align:center;color:#000"><a class="view-bikes-title" href="{{ path('trip_site_management_view_bikes',{ 'url':bikecities.url }) }}">{{ bike.title }}</a></h4>
                                	{% endif %}
                                {% endfor %}
                                <div><h6 style="text-align:center;color:#000">Starts @{{ bike.statingPrice }}</h6></div>
                                 <div class="row">
                                        {#} <div class="col-md-12" >
                                         	{% for bikearea in bike.bikescityarea %}
                                         		{% if bikearea.cityid==bikeslocbase.cityid %}
                                         		<p>{{ bikearea.area }}</p>
                                         		{% endif %}
                                         	{% endfor %}
                                         </div>{#}
                                         <div class="col-md-12" >
                                         {% if (bike.count <= 0) %}
                                          			<a class="btn btn-book-now view-bike" disabled>
                                                      Sold Out
                                                    </a>   
                                          	{% else %}
                                          		{% for bikecities in bike.bikescity %}
                                         		{% if bikecities.cityid==bikeslocbase.cityid %}
                                                <a class="btn btn-book-now view-bike" href="{{ path('trip_site_management_view_bikes',{ 'url':bikecities.url }) }}">
                                                  Rent Now
                                                </a>
                                                {% endif %}
                                         	{% endfor %}
                                            {% endif %}
        								{#<a class="btn aligncenter view-bike"   href="{{ path('trip_site_management_view_bikes',{'url':bike.locationUrl }) }}">Rent Now</a>#}
                                         </div>
                                         <div class="col-md-12" >
                                         	
                                         </div>
                                 </div>
                              
                              </div>
                            </div>
                            {% endif %}
                           {% endfor %}
                    </div>
                   
        </div>
    </div>
   
        
        
</section>
{% endblock %}