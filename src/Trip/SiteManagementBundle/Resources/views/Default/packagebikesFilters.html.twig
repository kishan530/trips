<h3 class="review-apply-filter upper">Search By Locations</h3>
<div class="row">
    	<div class="col-md-10">
    		<input type="text" id="packagefilterloc" placeholder="Search Location" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Search Location'" class="search-location-infilters" >
    	</div>
    	<div class="col-md-2" style="float:right">
    		<i class="fa fa-search" style="color:#222;"></i>
    	</div>
</div>
<div class="row"><div class="col-md-12"><hr class="hr-nomargin" style="margin-top: -10px;"></div></div>
<div class="review-filters-loc" id="searchloc">
	<table id="" class="myListloc" style="background-color:#F3F3F3;" border="0">
        <tbody>
{% for key,areas in bikesarea %}
 <tr>
                <td style="background: #fff;">
<input type="checkbox" name="check_list_loc_package[]" value="{{ areas.area }}"
 onclick="this.form.submit()" {% for checklist in packagefilterloc %}{% if checklist== areas.area %} checked {% endif %}{% endfor %}>
 <label for="">{{ areas.area }}</label>
 </td>      
            </tr>
{% endfor %}
</tbody>
    </table>
</div>
<h3 class="review-apply-filter upper">Search By Bikes</h3>
<div class="row">
	<div class="col-md-10">
		<input type="text" id="packagefilterbikes" placeholder="Search Bikes" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Search Bikes'" class="search-location-infilters" >
	</div>
	<div class="col-md-2" style="float:right">
		<i class="fa fa-search" style="color:#222;"></i>
	</div>
</div>
<div class="row"><div class="col-md-12"><hr class="hr-nomargin" style="margin-top: -10px;"></div></div>
<div class="review-filters-bikes">
	<table id="" class="myListbikes" style="background-color:#F3F3F3;" border="0">
        <tbody>
{% for bike in bike %}
{% if bike.active==1 %}
<tr>
                <td style="background: #fff;">
<input type="checkbox" name="check_list_bikes_package[]" value="{{ bike.id }}" onclick="this.form.submit()"
{% for checklist in packagefilterbikes %}{% if checklist== bike.id %} checked {% endif %}{% endfor %} {% if id== bike.id %} checked {% endif %}> 
<label for="">{{ bike.title }}</label><br>
</td>
               </tr>
               {% endif %}
            {% endfor %}
    	</tbody>
    </table>
</div>
