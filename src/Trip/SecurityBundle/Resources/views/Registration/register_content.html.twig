{% trans_default_domain 'FOSUserBundle' %}

		<div class="row">
			{#}<h4 class="classic-title"><span>{% trans %}Create a new account{% endtrans %}</span></h4>{#}
		  	
			  <div class="col-lg-12 col-sm-12 reg top-buffer3">
        
				<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
				
				{{ form_widget(form._token) }}
					
						<div class="row form-group {% if form.email.vars.errors|length %}has-error{% endif %}">
							<div class="row reg-input">
								{{ form_widget(form.email,{ 'attr': {'placeholder': 'Enter your email Id'}}) }}
							</div>
							<div class="row">
								{{ form_errors(form.email) }}
							</div>
						</div>
						
						<div class="row form-group {% if form.plainPassword.first.vars.errors|length %}has-error{% endif %}">
							<div class="row">
								{{ form_widget(form.plainPassword.first,{ 'attr': {'placeholder': 'Enter Password'}}) }}
							</div>
							<div class="row">
								{{ form_errors(form.plainPassword.first) }}
							</div>
						</div>
						<div class="row form-group {% if form.plainPassword.second.vars.errors|length %}has-error{% endif %}">
							<div class="row">
								{{ form_widget(form.plainPassword.second,{ 'attr': {'placeholder': 'Re-enter Password'}}) }}
							</div>
							<div class="row">
								{{ form_errors(form.plainPassword.second) }}
							</div>
						</div>
						
                        <div class="row form-group">
							<div class="row reg-terms-con">
								<input type="checkbox" required="required" name="cb" class="remove_margin">  {% trans %} I agree to the JustTrip {% endtrans%} <a target="_blank" href="{{ path('trip_site_management_terms') }}">{% trans %} Terms of Service{% endtrans%}</a>
							</div>
						</div>
						<div class="row">
						<div class="row top-buffer1">
							<input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary login-button"/>
						</div>
						</div>
				 </form>
	
				</div>
        </div>
      




   
