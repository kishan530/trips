{% extends 'page.html.twig' %}
{% block javascripts %}

{% endblock %}
{% block stylesheets %}

{% endblock %}

{% block breadcrumb %}
                    <div class="c1 breadcrumb text-left">
                        <div><span class="glyphicon glyphicon-home" style="padding:5px;"></span><a href="#">Home</a><span><span class="glyphicon glyphicon-chevron-right" style="padding:5px;"></span>Booking </span></div>
                    </div>
                    <h3></h3>
{% endblock %}

{% block body %}

    <section class="section clearfix">
        <div class="container">
            <div class="row">
                <div id="fullwidth" class="col-sm-12">
                {% if status == 'success' %}

                    <!-- START CONTENT -->
                    <div class="row">
                        <div id="content" class="col-md-12 col-sm-12 col-xs-12">
                            <div class="post-wrapper text-center clearfix">
                                <div class="successful">
                                    <img src="{{ asset('images/successful.png') }}" alt="">
                                </div>
                                <h6>Dear customer,</h6>
                                <p>Thank you very much for Booking Room with us. You will be receiving an e-mail within next 12 hours, with the details of hotel.<br>
                                For any problems please <a href="mailto:info@justtrip.in">info@justtrip.in</a> </p>
                                <a href="{{ path('trip_site_management_homepage_hotels') }}" class="btn btn-primary btn-normal btn-lg">CONTINUE SHOPPING</a>
                            </div><!-- end post-wrapper -->
                        </div><!-- end col -->
                    </div><!-- end row -->
                    <!-- END CONTENT -->
{% endif %}
 {% if status == 'fail' %}
                    <!-- START CONTENT -->
                    <div class="row">
                        <div id="content" class="col-md-12 col-sm-12 col-xs-12">
                            <div class="post-wrapper text-center clearfix">
                                <div class="successful">
                                    <img src="{{ asset('images/payment_cross.png') }}" alt="" width="150" height="150">
                                </div>
                                <h6>Dear customer,</h6>
                                <p>Whoops, looks like something went wrong.The payment was unsuccessful.Please try after some time.<br>
                                For any problems please <a href="mailto:info@justtrip.in">info@justtrip.in</a> </p>
                                <a href="{{ path('trip_site_management_homepage_hotels') }}" class="btn btn-primary btn-normal btn-lg">CONTINUE to BOOK</a>
                            </div><!-- end post-wrapper -->
                        </div><!-- end col -->
                    </div><!-- end row -->
                    <!-- END CONTENT -->
{% endif %}
                </div><!-- end fullwidth -->
            </div><!-- end row -->
        </div><!-- end container -->
    </section><!-- end section -->

{% endblock %}