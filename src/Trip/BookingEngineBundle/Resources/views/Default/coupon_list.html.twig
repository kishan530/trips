{# empty Twig template #}
{% extends 'page.html.twig' %}
{% block body %}
  <section class="section clearfix">
<div class="container">
 <div class="row">
                <div class="col-lg-9">
                <div class="small-gap"></div>
                <h2>Coupons Details</h2>
                </div>
                <div class="col-lg-3">
                      <div class="small-gap"></div>
                    <a href="{{ path('trip_hotel_add_coupon_code') }}" class="btn btn-primary">Add Coupons</a>
                </div>
              </div>  
    
    
    <div class="row">
   <div class="col-lg-12">
    <table class="table table-striped table-responsive">
 

<thead> 
<tr> 
	<th>SR</th> 
	
	<th>Coupon Name</th>

	<th>Coupon code</th>
	<th>Start Date </th>
	<th>Expire Date </th>
		
	<th>amount</th>
	
	<th>createdBy </th>
	<th>createdAt</th>
	<th>updatedBy </th>
	<th>updatedAt </th>
     
</tr> 
</thead> 


<tbody>
    {% for coupon in coupons %}
<tr> 
	<td>{{ loop.index }}</td> 

	<td>{{ coupon.couponName }} </td>
	<td>{{ coupon.couponCode }} </td>
	<td> {{ coupon.startDate|date("d/m/y")}} </td>
	<td> {{ coupon.expireDate|date("d/m/y")}} </td>
	<td> {{ coupon.amount}} </td>
	<td> {{ coupon.createdBy}} </td>
	<td>{{ coupon.createdAt|date("d/m/y")}} </td>
	<td>{{ coupon.updatedBy}} </td>
	<td>{{ coupon.updatedAt|date("d/m/y")}} </td>
	
	
	
	{#}<td> {% if client.active %} yes {% else %} No {% endif %}</td> {#}
	
        <td>
            <a href="{{ path('trip_hotel_edit_coupon_code', {'id': coupon.id})}}" > Edit </a>
            <a href="{{ path('trip_hotel_delete_coupon_code', {'id': coupon.id})}}"> Delete </a>
        </td> 
</tr> 
{% endfor %} 
</tbody> 

</table>
</div>
</div>
</div>
</section>

{% endblock %}