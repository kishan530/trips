 {% extends 'page.html.twig' %}
 {% block breadcrumb %}
                    <div class="c1 breadcrumb text-left">
                        <div><span class="glyphicon glyphicon-home" style="padding:5px;"></span><a href="#">Home</a><span><span class="glyphicon glyphicon-chevron-right" style="padding:5px;"></span>Booking</span></div>
                    </div>
                    <h3></h3>
{% endblock %}

{% block form %}

      {#}<iframe width="100%" height="600" scrolling="no" src="{{ paymentLink }}"></iframe>{#}
      
     
      <form action="{{ paymentLink['action'] }}"  method="post">

                    {% for key,option in paymentLink  %}
                    
                    <input type="hidden" name="{{ key }}" value="{{ option }}">
                    {% endfor %}
                    <input type="submit" class="btn btn-primary pull-right" style="margin-top: 40px; margin-left: 80px;margin-bottom: 10px;margin-right: 60px;background-color: #209838;border-color: #21bb29;" value="Pay Now" >
     		   </form> 
     		   
     		   
     		   
{% endblock %}
 {% block details %}

<li class="booking-price clearfix">
       <span>Service Tax (5.6%)</span>
       <span> <i class="fa fa-inr"></i> <em > {{ booking.serviceTax }} </em></span>
                                                        
</li> 
<hr>

<li class="booking-price clearfix">
       <span>Swach Bharth Cess (0.2%)</span>
       <span> <i class="fa fa-inr"></i> <em > {{ booking.swachBharthCess }} </em></span>
                                                        
</li>  

<hr>
<li class="booking-price clearfix">
       <span>Krishi Kalyan Cess (0.2%)</span>
       <span> <i class="fa fa-inr"></i> <em > {{ booking.krishiKalyanCess }} </em></span>
                                                        
</li> 
<hr>

<li class="text-right"><em>You Pay</em>
    <p><b><i class="fa fa-inr"></i><em id="price"> {{ booking.finalPrice }} </em></b></p> 
</li>
{% endblock %}
       {% block body %}
                   
                    {% set searchHotel = app.session.get('searchHotel') %}
                    
                   
               <section id="room" style="font-family:calibri;">
    <div class="container">
    
 
    
     <!-- START CONTENT -->
                    <div class="row">
                    </br>
                        <div id="content" class="col-md-12 col-sm-12 col-xs-12">
                     

                            <div class="clearfix"></div>
								<div class="row">
                                    <div class="col-sm-9">
                                    <div class="col-sm-12 booking-price-details-border booking-details box clearfix">
									<h5 class="box-title" style="background-color: #e1e1e1;padding:5px 0px 5px 10px;margin:0px -15px 0px -15px;">Review Your Booking</h5>
                                       
                                        <div class="box-content row">
                                         <h5 class="hotel-title"><span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ app.session.get('hotelname') }}</span></h5>
											<div class="col-sm-8 text-center">
											<div class="col-sm-4 text-center">
											<h6 class="check">Check-In</h6>
											<div class="date-box">
											<h5>{{ searchHotel.date }}</h5>
												{#}<p class="date-day">{{ search.checkIn|date('D') }}</p>
												<p class="date-no"><span class="ng-binding">{{ search.checkIn|date('j') }}</span> {{ search.checkIn|date('M') }}</p>{#}
												<p class="date-time">12:00 PM</p>
											</div>
												{#}	{{ search.checkIn|date('F jS Y') }} {#}
											</div>
											
											<div class="col-sm-4 text-center">
											<h6  class="check">Check-Out</h6>
											<div class="date-box">
											<h5>{{ searchHotel.returnDate }}</h5>
												{#}<p class="date-day">{{ search.checkOut|date('D') }}</p>
												<p class="date-no"><span class="ng-binding">{{ search.checkOut|date('j') }}</span> {{ search.checkOut|date('M') }}</p>{#}
												<p class="date-time">11:00 AM</p>
											</div>
											{#}	{{ search.checkOut|date('F jS Y') }} {#}
											</div>
											<div class="col-sm-4 text-center">
													<h6  class="check">Guests</h6>	
													<h5>{{ searchHotel.numAdult }}&nbsp;Adults&nbsp;
													{{ searchHotel.numChildren }}&nbsp;Childs</br>
													{{ searchHotel.numRooms }}&nbsp;Rooms</h5>
											</div>
											</div>
											
											<div class="col-sm-4">
												{#}<p class="pax-details " style="font-weight: bold;">{{ search.numAdult }} Adult in {{ search.numRooms }} Room </p>
												<div class="col-sm-12 font-13 address">
												{% set address = hotel.address %}
													<h6 class="font-13">Address :</h6>
													<p> {{ address.addressLine1 }}, {{ address.addressLine2 }}</br>
													{{ address.location }}, {{ address.city }}</p>
												</div>{#}
												<h6 class="font-13">Total Price</h6>
												<h5>{{ app.session.get('finalprice') }}</h5>
											</div>
											<div class="col-sm-12 padding-top">
											<p class="room-type"> <strong>Room Type:</strong>&nbsp;{{ app.session.get('roomType') }}</br>
											<span class="room-type"> <strong>Inclusions:&nbsp;</strong> 
											<span>-Hot Breakfast</span>
											<span>-Wi-Fi Internet</span>
											</span>
											
											</div>
											
										    
										</div>
									</div>
                                    
                            <div class="col-sm-12 booking-price-details-border booking-details box clearfix">
									<h5 class="box-title" style="background-color: #e1e1e1;padding:5px 0px 5px 10px;margin:0px -15px 0px -15px;">Personal Details</h5>
                                       
                                        <div class="box-content row">
                                        
											<div class="col-sm-12 text-center">
    											<div class="col-sm-4 text-center">
    											<h5 class="check">Name</h5>
            											{% set customer=app.session.get('customer') %}
            											<h6>{{ customer.name }}</h6>
    											</div>
    											
    											<div class="col-sm-4 text-center">
        											<h5  class="check">Email</h5>
        											<h6>{{ customer.email }}</h6>
    											</div>
    											<div class="col-sm-4 text-center">
    													<h5  class="check">Mobile No</h5>	
    													<h6>{{ customer.mobile }}</h6>
    											</div>
    											</div>
										    
										</div>
									</div>
                                  </div>  
                                    
              
                <form action="{{ paymentLink['action'] }}"  method="post">

                    {% for key,option in paymentLink  %}
                    
                    <input type="hidden" name="{{ key }}" value="{{ option }}">
                    {% endfor %}
                    <input type="submit" class="btn btn-primary pull-right" style="margin: 80px 60px 10px 80px;background-color: #EE2E24;font-size:18px;padding:15px 25px 15px 25px;" value="Pay Now" >
     		   </form> 
     		         </div>
     		         </div>
     		         </div>
     		         </div>
     		         </section>
     		                          
{% endblock %}